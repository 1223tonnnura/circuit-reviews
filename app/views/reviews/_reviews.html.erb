<ul class="list-unstyled">
  <% reviews.each do |review| %>
    <li class="media mb-3">
      <div class="media-body">
        <div>
          <span><%= review.user.name %></span>
          <p>reviewed at <%= review.created_at %></p>
          <p><%= review.content %></p>
        </div>
        <div>
          <% if current_user == review.user %>
            <%= link_to "Delete", review, method: :delete, data: { confirm: "You sure?" }, class: "btn btn-danger btn-sm" %>
          <% end %>
        </div>
      </div>
    </li>
  <% end %>
</ul>